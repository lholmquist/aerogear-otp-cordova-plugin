        <!--Can we have a target here for grouping -->
        <header-file src="lib/AeroGearOTP/AeroGearOTP.h" />
        <header-file src="lib/AeroGearOTP/AGBase32.h" />
        <source-file src="lib/AeroGearOTP/AGBase32.m" />
        <header-file src="lib/AeroGearOTP/AGClock.h" />
        <source-file src="lib/AeroGearOTP/AGClock.m" />
        <header-file src="lib/AeroGearOTP/AGOtp.h" />
        <source-file src="lib/AeroGearOTP/AGOtp.m" />
        <header-file src="lib/AeroGearOTP/AGStringEncoding.h" />
        <source-file src="lib/AeroGearOTP/AGStringEncoding.m" />
        <header-file src="lib/AeroGearOTP/AGTotp.h" />
        <source-file src="lib/AeroGearOTP/AGTotp.m" />

        <header-file src="lib/AFNetworking/AFHTTPClient.h" />
        <source-file src="lib/AFNetworking/AFHTTPClient.m" />
        <header-file src="lib/AFNetworking/AFHTTPRequestOperation.h" />
        <source-file src="lib/AFNetworking/AFHTTPRequestOperation.m" />
        <header-file src="lib/AFNetworking/AFImageRequestOperation.h" />
