<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="org.jboss.aerogear.otp"
    version="0.0.1">

    <name>AeroGear OTP plugin</name>

    <asset src="www/otp.js" target="otp.js" />

    <!-- ios -->
